<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../setup/head'); %>
  </head>

  <body>
    <%- include('../components/navbar'); %>

    <section id="home-content" class="container">
      <div class="my-5">
        <div class="align-items-center d-flex justify-content-between mb-4">
          <h3>Shoe List</h3>
          <a href="/add-shoe" class="btn btn-outline-primary"> Add </a>
        </div>
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Id</th>
              <th scope="col">Name</th>
              <th scope="col">Merk</th>
              <th scope="col">Quantity</th>
              <th scope="col">Status</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% shoes.forEach((shoe) => { %>
            <tr>
              <th scope="row"><%-shoe.id%></th>
              <td><%-shoe.name%></td>
              <td><%-shoe.merk%></td>
              <td><%-shoe.qty%></td>
              <td><%-shoe.available ? "Available" : "Non-Availabe"%></td>
              <td class="d-flex gap-2">
                <a href="/shoe/<%-shoe.id%>" class="btn btn-sm btn-light">
                  <i class="bi bi-eye"></i>
                </a>
                <a href="/edit-shoe/<%-shoe.id%>" class="btn btn-sm btn-light">
                  <i class="bi bi-pencil-square"></i>
                </a>
                <a href="#" class="btn btn-sm btn-light">
                  <i class="bi bi-trash"></i>
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>

    <%- include('../setup/script'); %>
  </body>
</html>
